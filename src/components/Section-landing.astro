---
const { color, id, showFooterContent } = Astro.props;
const textColor = color ? `text-${color}` : 'text-white'; // Fallback to white text
import FooterMenu from './FooterMenu.astro';
import ParticlesComponent from './ParticlesComponent.astro';
---

<section class="landing-section h-screen w-screen text-center overflow-hidden relative flex items-center justify-center herosection" data-header-color={color} id={id}>
  <slot name="particles"></slot>
  <div class="z-30 relative">
    <header>
      <slot name="counter-slot"></slot>
    </header>
    <slot name="content"></slot>
    <div class="dots-container">
      <slot name="dots"></slot>
    </div>

    <footer class="flex flex-col justify-end pb-20">
      <slot name="footer" />
      {showFooterContent && <FooterMenu />}
    </footer>
  </div>
</section>
