---
import ParticlesComponent from "./ParticlesComponent.astro";
import Section from "./Section-landing.astro"
---

<Section id="herosection" color="white">
  <ParticlesComponent slot="particles"/>
  <div x-data="{ 
        text: '', 
        fullText: 'Our Common Ground is a collage - in the same way that each of us is a composite of the different experiences, histories and ideas that shaped us in our youths. So, too, with the communities we come from and the systems we build: they are complex.', 
        charIndex: 0, 
        typeSpeed: 50 
      }"
       x-init="setInterval(function(){ 
                  if($data.charIndex < $data.fullText.length) {
                    $data.text += $data.fullText.charAt($data.charIndex);
                    $data.charIndex++;
                  }
                }, $data.typeSpeed);"
       id="text-container"
       class="text-container text-left"
       slot="animated-text">
    <h1 id="animated-text" class="main-title" x-text="text"></h1>
  </div>
</Section>



<style>

  .herosection {
    position: relative;  /* or you could use absolute depending on your layout needs */
  }

  .main-title {
  font-size: 1rem;
  color: rgb(255, 255, 255);
  z-index: 1;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -100%);
}

#animated-text {
  width: 500px;
  
}



  .particles-fullscreen {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

</style>
