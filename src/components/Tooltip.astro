---
let { text = '', visible = false } = Astro.props;
---

<div x-data="{ show: false }">
  <span @click="show = !show" class="tooltip">
    <slot></slot>
    <span x-show="show" class="tooltiptext">{text}</span>
  </span>
</div>
<style>
  .tooltip {
    position: relative;
    display: inline-block;
  }

  .tooltip .tooltiptext {
    visibility: hidden;
    width: 120px;
    background-color: #555;
    color: #fff;
    text-align: center;
    padding: 5px 0;
    border-radius: 6px;

    position: absolute;
    z-index: 1;
    bottom: 125%;
    left: 50%;
    margin-left: -60px;

    opacity: 0;
    transition: opacity 0.3s;
  }

  .tooltip[x-data][x-cloak] { display: none; }

  .tooltip .tooltiptext[x-show="false"] {
    visibility: hidden;
    opacity: 0;
  }

  .tooltip .tooltiptext[x-show="true"] {
    visibility: visible;
    opacity: 1;
  }
</style>
