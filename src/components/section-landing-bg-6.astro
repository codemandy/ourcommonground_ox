---
const { color, id, showFooterContent } = Astro.props;
const textColor = color ? `text-${color}` : 'text-white'; // Fallback to white text
import FooterMenu from './FooterMenu.astro';
---

<section class="landing-section home-6 bg-black h-screen w-screen text-center overflow-hidden relative flex items-center justify-center herosection" data-header-color={color} id={id}>
  <slot name="particles"></slot>
  <div class="z-30 relative">
    <header>
      <slot name="header"></slot>
    </header>
    <div class="animatedtext">
      <slot name="animated-text"></slot>
    </div>
    <div class="animatedtext1">
      <slot name="animated-text1"></slot>
    </div>
    <div class="animatedtext2">
      <slot name="animated-text-2"></slot>
    </div>
    <div class="animatedtext3">
      <slot name="animated-text3"></slot>
    </div>
    <div class="animatedtext4">
      <slot name="animated-text4"></slot>
    </div>
    <div class="animatedtext5">
      <slot name="animated-text5"></slot>
    </div>

    <footer class="flex flex-col justify-end pb-20">
      <slot name="footer" />
      {showFooterContent && <FooterMenu />}
    </footer>
  </div>
</section>


<style>
 .home-6 {
  overflow: hidden; /* To contain the pseudo-element */
}
.home-6::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('/speech-27.png'); /* Replace with your image path */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  transition: transform 2.5s ease; /* Smooth transition for zoom effect */
  transform-origin: center; /* Zoom from center */
}

.home-6:hover::before {
  transform: scale(1.3); /* Adjust scale for zoom level */
}

</style>
