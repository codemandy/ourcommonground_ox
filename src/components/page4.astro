<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector("#bg-image-accessories") as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "bg-5.webp";
  } else {
    imageElement.src = "bg-5.webp";
  }
</script>
